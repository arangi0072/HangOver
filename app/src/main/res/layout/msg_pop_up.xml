<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="80dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@drawable/border_popup"
        android:orientation="vertical">

<!--        <Button-->
<!--            android:id="@+id/msg_edit"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"-->

<!--            android:backgroundTint="@color/white"-->
<!--            android:text="Edit"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/black" />-->

        <Button
            android:id="@+id/msg_copy"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_content_copy_24"
            android:text="Copy Msg"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/popup_delete_me"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_delete_24"
            android:text="Delete From Me"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/popup_delete_both"
            android:layout_width="match_parent"
            android:layout_height="40dp"


            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_delete_24"
            android:text="Delete From Both"
            android:textAlignment="center"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>